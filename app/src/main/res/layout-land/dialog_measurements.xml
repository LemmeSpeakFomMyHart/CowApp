<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_of_measurement" />

        <Button
            android:id="@+id/cow_measurement_date_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Button" />

        <TextView
            android:id="@+id/textView11"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/yield" />

        <EditText
            android:id="@+id/cow_yield_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:digits="0123456789."
            android:ems="10"
            android:hint="@string/hint_edit_text_yield"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="4" />

        <TextView
            android:id="@+id/textView10"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/milk_fat_content" />

        <EditText
            android:id="@+id/cow_fat_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:digits="0123456789."
            android:ems="10"
            android:hint="@string/hint_edit_text_fat"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="4" />

        <TextView
            android:id="@+id/textView9"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weight" />

        <EditText
            android:id="@+id/cow_weight_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:digits="0123456789."
            android:ems="10"
            android:hint="@string/hint_edit_text_weight"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="5" />

    </LinearLayout>
</ScrollView>